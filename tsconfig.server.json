{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "paths": {
      "~/*": ["./src/*"]
    },
    "incremental": false
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
}
